<%= content_for(:navigation) do %>
  <% if current_user %>
    <p>Logged in as <%= current_user.name %>.</p>
    <p><%= link_to "Log the F*^$ out!", logout_path %></p>
    <p><%= link_to "Main Page", "/" %></p>
  <% else %>
  <p><%= link_to "Login", login_path %></p>
  <p><%= link_to "Main Page", "/" %></p>
  <% end %>
<% end %>
<% content_for(:header) do %>
  <div class="header">
    <h1>Post: <%= @post.title %></h1>
  </div>
<% end %>
<div class="row">
  <p><%= image_tag @post.photo.url %></p>
  <p><%= @post.content %> </p>
  ##### <%= button_to "Add Tag", tags_path, :class => "btn btn-warning" %>
</div>
<div class="row">
  <div class="col-sm-3">
  <%= link_to "Back to my Posts", user_path(@user) %>
  </div>
  <div class="col-sm-9">
  </div>
</div>


